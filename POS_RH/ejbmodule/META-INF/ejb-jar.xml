<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/dtd/ejb-jar_2_0.dtd">
<ejb-jar>
  <display-name>pos41_ejb</display-name>
  <enterprise-beans>
    <session>
      <display-name>ShoppingCard</display-name>
      <ejb-name>ShoppingCard</ejb-name>
      <home>com.royalstone.pos.ejb.ShoppingCardHome</home>
      <remote>com.royalstone.pos.ejb.ShoppingCard</remote>
      <ejb-class>com.royalstone.pos.ejb.ShoppingCardBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Bean</transaction-type>
      <resource-ref>
        <res-ref-name>jdbc/SHCard</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
      </resource-ref>
    </session>
  </enterprise-beans>
</ejb-jar>
